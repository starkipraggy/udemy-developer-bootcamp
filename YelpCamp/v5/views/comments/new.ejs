<%- include("../partials/header") %>

<div class="container">
  <div class="row">
    <h1 class="col-12 text-center">Add New Comment to <%= campground.name %></h1>
    
    <div class="col-6 col-lg-4 text-center" style="margin: 25px auto;">
      <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" placeholder="text">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="comment[author]" placeholder="author">
        </div>
        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
      </form>
      <a href="/campgrounds">&lt; Back</a>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>